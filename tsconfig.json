{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"],
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "declaration": true,
    "lib": ["es2018"]
  },
  "include": ["src/**/*"]
}
